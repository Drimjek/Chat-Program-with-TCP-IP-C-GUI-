<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chat Client" Height="400" Width="600"
        Background ="{DynamicResource WindowBackground}"
        Foreground ="{DynamicResource TextColor}"
        >

    <Grid Margin="10" Background="{DynamicResource ControlBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

    <!-- Baris atas: IP, Port, Username, Connect -->
    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
        <TextBox x:Name="txtIP" Width="120" Text="127.0.0.1"/>
        <TextBox x:Name="txtPort" Width="60" Text="9000" Margin="5,0,0,0"/>
        <TextBox x:Name="txtUser" Width="100" Text="User"/>
        <Button x:Name="btnConnect" Content="Connect" Click="btnConnect_Click" Margin="5,0,0,0"/>
        <Button x:Name="btnDarkMode" Content="🌙 Dark Mode" Width="100" Margin="5,0,0,0" Click="btnDarkMode_Click"/>

    </StackPanel>

    <!-- Tengah: Chat + User list -->
    <Grid Grid.Row="1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="150" />
        </Grid.ColumnDefinitions>

        <!-- Chat area -->
        <ListBox x:Name="lstChat" Grid.Column="0" Margin="0,0,5,0"
                     Background="{DynamicResource ControlBackground}"
                     Foreground="{DynamicResource TextColor}"/>

        <!-- User list -->
        <StackPanel Grid.Column="1">
            <TextBlock Text="Online Users" FontWeight="Bold" Margin="0,0,0,5"/>
            <ListBox x:Name="lstUsers"
                     Background="{DynamicResource ControlBackground}"
                     Foreground="{DynamicResource TextColor}"/>
        </StackPanel>
    </Grid>

    <!-- Bawah: input pesan -->
    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,5,0,0">
        <TextBox x:Name="txtMessage" Width="350"/>
        <Button Content="Send" Width="60" Margin="5,0,0,0" Click="btnSend_Click"
                    Background="{DynamicResource ControlBackground}"
                    Foreground="{DynamicResource TextColor}"/>
    </StackPanel>
    </Grid>

</Window>
