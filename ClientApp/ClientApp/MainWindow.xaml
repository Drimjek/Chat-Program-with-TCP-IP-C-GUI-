<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chat Client" Height="400" Width="500">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
            <TextBox x:Name="txtIP" Width="120" Text="127.0.0.1"/>
            <TextBox x:Name="txtPort" Width="60" Text="9000" Margin="5,0,0,0"/>
            <TextBox x:Name="txtUser" Width="100" Text="User"/>
            <Button x:Name="btnConnect" Content="Connect" Click="btnConnect_Click" Margin="5,0,0,0"/>
        </StackPanel>

        <ListBox x:Name="lstChat" Grid.Row="1"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,5,0,0">
            <TextBox x:Name="txtMessage" Width="350"/>
            <Button Content="Send" Width="60" Margin="5,0,0,0" Click="btnSend_Click"/>
        </StackPanel>
    </Grid>
</Window>
